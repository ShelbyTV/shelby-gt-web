<div class="content-wrapper">
  <header class="seovideo-header clearfix">
    <div class="seovideo-header-contents">
      <div class="seovideo-logo">
        <a href="http://shelby.tv"><img border=0px width=100px src="/images/seovideo/landing_logo.svg"></a>
      </div>
      <div class="seovideo-slogan">
        <a href="http://shelby.tv">TRY THE FREE WEB APP SHELBY.TV</a>
      </div>
    </div>
  </header>

  <hr class="seovideo-headerrule">

  <div class="seovideo-wrapper">

    <div class="seovideo-leftcol">
      <div class="seovideo-pitch">
        <a href="http://shelby.tv">This video is brought to you by Shelby.tv - try out the free web app and discover<br>all the amazing new videos your friends are sharing together.</a>
      </div>

      <div class="seovideo-embed">
        <iframe class="youtube-player" type="text/html" width="640" height="365" src="http://www.youtube.com/embed/<%= @provider_id %>" frameborder="0">
        </iframe>
      </div>
      <div class="seovideo-details">
        <p>Title: <%= @video_title %></p>
        <p>Author: <%= @video_author %></p>
        <p>Description: <%= @video_description %></p>
      </div><!-- eo seovideo-details -->

      <div class="seovideo-messages">
        <% @conversations.each do |conversation| %>
          <% conversation["messages"].each do |message| %>
            <hr class="seovideo-headerrule">
            <div class="seovideo-message">
              <div class="seovideo-message-image">
                 <img width=50 height=50 src="<%= message["user_image_url"] %>">
              </div>
              <div class="seovideo-messagenickname">
                <% if message["origin_network"] && message["origin_network"] == "twitter" %>
                  @<%= message["nickname"] %>
                <% else %>
                  <%= message["nickname"] %>
                <% end %>
              </div>
              <div class="seovideo-messagetext">
                <%= message["text"] %>
              </div>
              <div class="seovideo-messagedate">
                Posted <%= message["created_at"] %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div><!-- eo seovideo-messages -->

    </div><!-- eo seovideo-leftcol -->

    <div class="seovideo-rightcol">
      <% if !@video_related_response_body_results.empty? %>
        <div class="seovideo-relatedvideos">
          <div class="seovideo-relatedvideo-header">
            Related Videos
          </div>
          <% @video_related_response_body_results.each do |video_related| %>
            <div class="seovideo-relatedvideo">
              <a href="http://shelby.tv/video/youtube/<%= video_related["provider_id"] %>"><img width=194 height=108 src=<%= video_related["thumbnail_url"] %> >
              <p class="seovideo-relatedvideo-title">
                <%= video_related["title"] %>
              </p>
              </a>
            </div>
          <% end %>
        </div>
      <% end %>
    </div><!-- eo seovideo-rightcol -->

  </div><!-- eo seovideo-wrapper -->

</div><!-- eo content-wrapper -->	
