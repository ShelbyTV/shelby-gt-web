  //})();

  $(document).ready(function(){

    $('.js-fb-send').on('click', function(e){
      var _url = $(e.currentTarget).data('video-url');
      console.log(_url);
      FB.ui({
        method: 'send',
        link: _url
      },
      function(response){
        // event tracking
        var _status = response ? 'was' : 'was not';
        try {
          _gaq.push(['_trackEvent', 'SEO Video', 'Facebook Message ' + _status + ' Sent']);
        } catch(e) {}
      });
    });

    $('.js-search-form').on('submit', function(e){
      e.preventDefault();

      var searchQuery = $(e.currentTarget).find("#seovideo-search").val();
      if (searchQuery) {
        window.location.href = '/search?query=' + encodeURIComponent(searchQuery);

        try {
          _gaq.push(['_trackEvent', 'SEO Video', 'search', searchQuery.toLowerCase()]);
        } catch(e) {}
      }
    });
  });
</script>
