<div class="js-seo-signup-message welcome-message__wrapper welcome-message__wrapper--seo hidden">
  <div class="welcome-message welcome-message--large welcome-message--seo">
    <div class="js-close close-me js-track-event" data-ga_category="SEO Video" data-ga_action="Click close signup modal">[X]</div>
    <div>
      <h2 class="welcome-message__h1--plain">
        Want more video? Signup now!
      </h2>

      <h3 class="welcome-message__h2">
        <%= Settings::Marketing.discover_and_enjoy %>
      </h3>

      <div class="welcome-message__button-wrapper">
        <a href="http://api.shelby.tv/auth/facebook" class="button_primer button_facebook-blue button_command button_command--seo button_command--facebook js-authorize js-authorize--facebook js-cta js-track-event"  data-popup_width="1000" data-popup_height="650" data-ga_category="SEO Video" data-ga_action="Click Sign Up with Facebook" data-ga_label="<%= request.referer || 'direct' %>">
          <span class="icon-facebook"></span>
          <span class="button_label">Sign Up with Facebook</span>
        </a>
        <a href="http://api.shelby.tv/auth/twitter" class="button_primer button_twitter-blue button_command button_command--seo button_command--twitter js-authorize js-authorize--facebook js-cta js-track-event"  data-popup_width="1000" data-popup_height="650" data-ga_category="SEO Video" data-ga_action="Click Sign Up with Twitter" data-ga_label="<%= request.referer || 'direct' %>">
          <span class="icon-twitter"></span>
          <span class="button_label">Sign Up with Twitter</span>
        </a>
        <br>
        <h3 class="email-signup">
          or <a href="/signup" class="js-track-event" data-ga_category="SEO Video" data-ga_action="Click Sign Up with Email Link" data-ga_label="<%= request.referer || 'direct' %>">signup</a>  with your email
        </h3>
      </div>
    </div><!-- eo welcome-message__head -->

  </div><!-- eo .welcome-message -->
</div>

<%= javascript_tag do %>
  <%= render :partial => "signup_cta_brains", :locals => {:from_similar_video=> @from_similar_video}, :formats=>[:js] %>
<% end %>
