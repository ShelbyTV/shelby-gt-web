<div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '<%= Settings::Facebook.genius_app_id %>', // App ID
      channelUrl : '//WWW.YOUR_DOMAIN.COM/channel.html', // Channel File
      status     : true, // check login status
      cookie     : true, // enable cookies to allow the server to access the session
      xfbml      : true  // parse XFBML
    });

		// try and set comment box and parse some HTML5 FBML tags if shelby is loaded
		if (typeof shelby !== "undefined" && shelby.guide) {
			var frame = shelby.models.guide.get("activeFrameModel");
			$('#fb-comments-holder').html('<div class="fb-comments" data-href="'+shelby.config.appUrl+'/roll/'+frame.get('roll').id+'/frame/'+frame.id+'" data-num-posts="2"></div>');			
		}
		FB.XFBML.parse($('#fb-comments-holder')[0]);
    FB.XFBML.parse($('.roll')[0]);
		
		// do things if logged in or not
		FB.getLoginStatus(function(response) {  
		  if (response.status == "connected"){
		    // logged in and authorized!
				doWhenLoggedIntoFB(FB);
		  }
		  else {
		    // logged in but not authorized
		    $('body').addClass('not-authorized');
				$('.login-area .landing-shelf-header').text("Personalize your video discovery and share videos with your friends");
		  }
		});
		
		// Event subscriptions
		FB.Event.subscribe('auth.login',
		    function(r) {
						doWhenLoggedIntoFB(FB);
		    }
		);
		/*
		FB.Event.subscribe('comment.create',
			function(response) {
				window.comment_response = response;
			}
		);
		*/
  };

	var doWhenLoggedIntoFB = function(FB){
		$('body').addClass('connected');
		$('body').removeClass('not-authorized');
		FB.api('/me?fields=id,name,likes.fields(name)', function(r){
			for (var L in r.likes.data) {
				if (L <= 10){
					$('ul#searches-from-likes').append('<li><a href="#">'+r.likes.data[L]['name']+'</a></li>');
				}
			}
		});
		FB.api('/me', function(r){
			$('.login-area .landing-shelf-header').text("Hi "+r.first_name+"! See what video Shelby Genius finds from things you like:");
		});
	};
	
	// Load the SDK Asynchronously
  (function(d){
     var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement('script'); js.id = id; js.async = true;
     js.src = "//connect.facebook.net/en_US/all.js";
     ref.parentNode.insertBefore(js, ref);
   }(document));
</script>