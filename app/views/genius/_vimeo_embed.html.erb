<div class="thumbnail">
	<img src="<%= thumbnail_url %>" width="320" height="180"/>
</div>
<div class="video-title">
	
</div>


<script>
	$('div.<%= provider_name %>-<%= provider_id %>').on('click', function(){
		$(this).find('img').replaceWith('<iframe class="<%= provider_name %>-<%= provider_id %>" width="320" height="180" src="http://player.vimeo.com/video/<%= provider_id %>?autoplay=1&portrait=0" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>');
		
		if (window.currentPlaying){
			var thumbnail_url = $('iframe.'+window.currentPlaying).data('thumbnail_url');
			$('iframe.'+window.currentPlaying).replaceWith('<img src="'+thumbnail_url+'" width="320" height="180"/>');
		}
		
		window.currentPlaying = '<%= provider_name %>-<%= provider_id %>';
	});
</script>