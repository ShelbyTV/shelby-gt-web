<div class="signup signup--content" role="main">
  <div class="signup__head">
    <h2 class="signup__h2">
      Step 1 of 3: Content
    </h2>

    <h1 class="signup__h1">
      Fine-tune your Shelby TV
    </h1>
  </div>

  <div class="signup__body">
    <%= form_tag do %>
      <fieldset class="form_fieldset">
        <legend class="form__legend">
          Select from categories below and we'll add videos <br/>
          by awesome creators to your stream.
        </legend>
        <div class="slideshow js-slideshow">
          <div class="slideshow__slide">
            <ul class="list">
              <li class="one-half">
                <div class="media_module roll_card clearfix">
                  <div class="media_image media_image--rev">
                    <button class="button_primer button_command button_command--wide button_gray">
                      Follow
                    </button>
                  </div><!-- eo media_image--rev -->

                  <div class="image_module media_image roll_card__avatar" style="background-image: url('/images/avatar.jpg');" role="img">
                    <img src="/images/avatar.jpg" class="visuallyhidden" />
                  </div><!-- eo media_image -->

                  <div class="media_body">
                    <h3 class="roll_card__h1">
                      VICE
                    </h3>

                    <p class="roll_card__block">
                      Exploring uncomfortable truths
                    </p>
                  </div><!-- media_body -->
                </div><!-- eo roll_card -->
              </li>
            </ul><!-- eo list -->
          </div><!-- eo slide -->

        </div><!-- eo slideshow -->
      </fieldset>

      <%= submit_tag("Next", :class => "button_primer button_command button_command--wide button_green js-advance-slideshow") %>
    <% end %>

  </div>
</div>





