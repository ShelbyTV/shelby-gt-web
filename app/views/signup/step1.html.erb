<div class="signup signup--content" role="main">
  <div class="signup__head">
    <h2 class="signup__h2">
      Step 1 of 3: Content
    </h2>

    <h1 class="signup__h1">
      Fine-tune your Shelby TV
    </h1>
  </div>

  <div class="signup__body">
    <%= form_tag do %>
      <fieldset class="form_fieldset">
        <legend class="form__legend">
          Select from categories below and we'll add videos <br/>
          by awesome creators to your stream.
        </legend>
        <div class="slideshow js-slideshow">
          <% Settings::Signup.roll_categories.each_with_index do |category,cat_index| %>
            <div class="slideshow__slide" data-index="<%= cat_index %>" data-category="<%= category['title'] %>">
              <ul class="list">
                <% category['rolls'].each_with_index do |roll,roll_index| %>
                  <li class="list__item one-half">
                    <div class="media_module roll_card clearfix" data-roll_id="<%= roll["personal_roll_id"] %>">
                      <%= hidden_field_tag "roll[#{roll['personal_roll_id']}]", false %>
                      <div class="media_image media_image--rev">
                        <button class="button_primer button_command button_gray roll_card__button js-followOrUnfollow" data-roll_id="<%= roll["personal_roll_id"] %>">
                          Follow
                        </button>
                      </div><!-- eo media_image--rev -->

                      <div class="image_module media_image roll_card__avatar" style="background-image: url('<%= roll["avatar"] %>');" role="img">
                        <img src="<%= roll["avatar"] %>" class="visuallyhidden" title="<%= roll["nickname"] %>'s avatar" />
                      </div><!-- eo media_image -->

                      <div class="media_body">
                        <h3 class="roll_card__h1">
                          <%= roll["nickname"] %>
                        </h3>

                        <p class="roll_card__block">
                          <%= roll["description"] %>
                        </p>
                      </div><!-- media_body -->
                    </div><!-- eo roll_card -->
                  </li>
                <% end %>
              </ul><!-- eo list -->
            </div><!-- eo slide -->
          <% end %>

        </div><!-- eo slideshow -->
      </fieldset>

      <%= submit_tag("Next", :class => "button_primer button_command button_command--wide button_green js-next js-advance-slideshow") %>
    <% end %>

  </div>
</div>





