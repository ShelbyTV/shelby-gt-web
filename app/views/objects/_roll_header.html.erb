<div class="roll-header">
  <%= render :partial => '/objects/user_card',
      :locals => {
        :avatar       => avatar_url_for_user(user),
        :clickable    => false,
        :ga_category  => ga_category,
        :is_following => is_following,
        :realname     => user['name'],
        :roll_id      => user['personal_roll_id'],
        :username     => user['nickname'],
        :user_type    => user['user_type']
      } %>

  <% if roll_type != Settings::Mobile.roll_types['user'] %>
    <ul class="list list--fit tabs clearfix">
      <li class="one-half">
        <a href="<%= appropriate_subdirectory %>/<%= user['nickname'] %>/activity" class="button_standard tab<%= ' tab--active' if roll_type == Settings::Mobile.roll_types['activity'] %> js-track-event js-user-tab js-user-shares" data-ga_category="<%= ga_category %>" data-ga_action="Click activity tab" data-ga_label="<%= user['nickname'] %>">
          Activity
        </a>
      </li>

      <li class="one-half">
        <a href="<%= appropriate_subdirectory %>/<%= user['nickname'] %>/following" class="button_standard tab<%= ' tab--active' if roll_type == Settings::Mobile.roll_followings %> js-track-event js-user-tab js-user-likes" data-ga_category="<%= ga_category %>" data-ga_action="Click following tab" data-ga_label="<%= user['nickname'] %>">
          Following
        </a>
      </li>
    </ul>
  <% end %>
</div><!-- eo roll-header -->
