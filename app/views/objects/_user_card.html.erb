<div class="user">
  <div class="media_module user__lining clearfix">
    <% if is_following != nil && user_type != 1 %>
      <div class="media_image--rev">
        <button class="button_primer button_command button_command--flexible<%= (is_following) ? " button_gray button_active" : " button_green" %> user__button js-toggle-follow js-track-event" data-roll_id="<%= roll_id %>" data-ga_category="<%= ga_category %>" data-ga_action="Click follow source" data-ga_label="<%= username %>">
          <span class="button_label"><%= (is_following) ? 'Following' : 'Follow' %></span>
        </button>
      </div><!-- eo media_image--rev -->
    <% end %>

    <%= "<a href=\"#{appropriate_subdirectory}/#{roll_id}\" class=\"user__link\">".html_safe if clickable %>
      <span class="media_image image_module avatar avatar--small user__avatar" role="img" style="background-image:url(<%= avatar %>);">
        <img class="visuallyhidden" src="<%= avatar %>"/>
      </span><!-- eo media_image -->

      <div class="media_body">
        <h3 class="user__h1">
          <%= username %>
        </h3>

        <h4 class="user__h2">
          <% if user_type == Settings::User.user_type.anonymous %>
            <a href="<%= appropriate_subdirectory %>/preferences/profile" class="js-track-event" data-ga_category="<%= ga_category %>" data-ga_action="Click Edit profile from Header">Edit your profile</a>
          <% else %>
            <%= realname.html_safe if realname %>
          <% end %>
        </h4>
      </div><!-- eo media_body -->
    <%= "</a>".html_safe if clickable %>
  </div><!-- eo media_module -->
</div><!-- eo user -->
