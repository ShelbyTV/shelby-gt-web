<% vid_info = "#{video["provider_name"]}-#{video["provider_id"]}" %>
<script>
	$('li.<%= vid_info %>').on('click', function(){
		$('#mobile-video-player').html('<iframe class="<%= vid_info %>" width="320" height="180" src="http://player.vimeo.com/video/<%= video["provider_id"] %>?autoplay=1&portrait=0" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>');
		
		if (window.currentPlaying){
			$('#mobile-video-player').html('');
			window.currentPlaying = null;
		}
		else {window.currentPlaying = '<%= vid_info %>';}
	});
</script>