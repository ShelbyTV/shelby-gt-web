<div class="modal__body modal__body--bare modal__body--<%= currentService %> clearfix">
    <h1 class="alpha modal__h1 modal__h1--padding">
      Connecting <%= currentService.capitalize %>
    </h1>

    <ol class="list js-progress-list">
      <li class="list__item load_progress clearfix">
        <h2 class="load_progress__h1">
          <span class="image_module load_progress__status">
            <span class="icon icon-check"></span>
          </span>
          <span class="beta load_progress__label">
            <span>Connecting <%= currentService.capitalize() %></span>
            <span>Connected <%= currentService.capitalize() %></span>
          </span>
        </h2>
      </li>
      <li class="list__item load_progress load_progress--loading clearfix">
        <h2 class="load_progress__h1">
          <span class="image_module load_progress__status">
            <span class="icon icon-check"></span>
          </span>
          <span class="animate_module load_progress__total load_progress__total--no_data js-num-friends">0</span>
          <span class="beta load_progress__label">
            <span>Finding friends sharing video</span>
            <span>Found friends sharing video</span>
          </span>
        </h2>
      </li>
      <li class="list__item load_progress load_progress--loading clearfix">
        <h2 class="load_progress__h1">
          <span class="image_module load_progress__status">
            <span class="icon icon-check"></span>
          </span>
          <span class="animate_module load_progress__total load_progress__total--no_data js-num-videos">0</span>
          <span class="beta load_progress__label">
            <span>Finding videos from friends</span>
            <span>Found videos from friends</span>
          </span>
        </h2>
      </li>
    </ol>

  </div><!-- eo modal__body -->

  <div class="animate_module modal__foot modal__foot--rev clearfix js-modal-foot">
    <% if (currentService == 'facebook') %>
      <img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/offsite_event.php?id=6008900191372&amp;value=0&amp;currency=USD" />
      <%= form_tag(mobile_set_onboarding_path(@current_step)) do %>
        <fieldset class="form_fieldset form_fieldset--rev">
          <input class="form_checkbox form_checkbox--inline" type="checkbox" name="onboarding_timeline_sharing" id="onboarding-timeline-sharing" checked="checked" />
          <label class="form_label form_label--inline" for="onboarding-timeline-sharing">Publish activity to Facebook Timeline</label>
        </fieldset>
        <button type="submit" class="button_primer button_command button_command--flexible button_green js-invite-friends">
          <span class="button_label">Next</span>
          <span class="icon icon-arrow_right"></span>
        </button>
      <% end %>
    <% elsif (currentService == 'twitter') %>
      <%= form_tag(mobile_set_onboarding_path(@current_step)) do %>
        <fieldset class="form_fieldset form_fieldset--rev">
          <input class="form_checkbox form_checkbox--inline" type="checkbox" name="onboarding_follow_shelby" id="onboarding-follow-shelby" checked="checked" />
          <label class="form_label form_label--inline" for="onboarding-follow-shelby">Follow @Shelby on Twitter</label>
        </fieldset>
        <button type="submit" class="button_primer button_command button_command--flexible button_green js-invite-friends">
          <span class="button_label">Next</span>
          <span class="icon icon-arrow_right"></span>
        </button>
      <% end %>
    <% end %>
  </div><!-- eo modal__foot -->
