<% vid_info = "#{video["provider_name"]}-#{video["provider_id"]}" %>
<script>
	$('li.<%= vid_info %>').on('click', function(){
		if ( window.currentPlaying == '<%= vid_info %>' ){
			$('#mobile-video-player').html('');
			$('#mobile-video-player').slideUp('fast');
			$("#content").removeClass('video-playing');
			window.currentPlaying = null;
		}
		else{
			var src = "http://player.ooyala.com/player.js?externalId=espn:<%= video['provider_id'] %>&callback=window.receiveEspnEvent&debug=false&hasModuleParams=1&pcode=1kNG061cgaoolOncv54OAO1ceO-I&playerBrandingId=a28f1994885a41098953d166c34cf81c&targetReplaceId=espn-mobile-video-player&wmode=opaque&autoplay=1&width=500&height=300"; 
		//write to head, where script will be downloaded and run
			window.tag = document.createElement('script');
			tag.src = src;
			(document.head || document.getElementsByTagName( "head" )[0]).appendChild(tag);		
			$('#mobile-video-player').slideDown('slow');
			$("#content").addClass('video-playing');
			window.currentPlaying = '<%= vid_info %>';
		}
		
	});
</script>