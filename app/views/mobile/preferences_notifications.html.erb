<div class="preferences_page preferences_page--notifications">
  <%= form_tag "#{Settings::Mobile.mobile_subdirectory}/preferences/notifications", :class => "form_module js-submit-notifications" do %>
    <h1 class="form__legend">
      Email Notifications
    </h1>

    <% @preferences.each do |key,value| %>
      <% if Settings::Mobile.email_notifications.key?(key) %>
        <fieldset class="form_fieldset">
          <%= check_box_tag key, key, value, :class => "form_checkbox js-notification-checkbox"  %>

          <%= label_tag key, nil, :class => "form_label" do %>
            <%= raw Settings::Mobile.email_notifications[key] %>
          <% end %>
        </fieldset>
      <% end %>
    <% end %>

    <fieldset class="form_fieldset">
      <button type="submit" class="button_primer button_command button_command--submit button_green">
        Save
      </button>

      <button type="reset" class="button_primer button_command button_command--sub button_command--cancel button_command--submit button_gray">
        Reset
      </button>
    </fieldset>
  <% end %>
</div>
