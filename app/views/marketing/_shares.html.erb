<div class="shelf shelf--marketing_shares">
  <div class="frame-body-wrapper">
    <h2 class="alpha">
      Discover and enjoy the best of web video
    </h2>

    <p>
      Sign up to see what your friends are sharing<%= " on #{(@has_referer[0] == 't.co') ? 'Twitter' : @has_referer[0].capitalize}" if @has_referer %>.
    </p>

    <% if @is_mobile %>
      <p class="shelf__block--push shelf__block--center">
        <a href="http://api.shelby.tv/auth/facebook" class="button_primer button_facebook-blue button_command button_command--sub button_command--facebook four-fifths shelf__button js-authorize js-authorize--facebook js-cta js-track-event"  data-popup_width="1000" data-popup_height="650" data-ga_category="Share Page" data-ga_action="Click Sign Up with Facebook on mobile" data-ga_label="Call to Action shelf">
          <span class="icon icon-facebook"></span>
          <span class="button_label">Sign Up with Facebook</span>
        </a>
      </p>
    <% else %>
      <p class="shelf__block--push shelf__block--center">
        <a href="/signup" class="button_primer button_command button_command--wide button_green js-track-event" data-ga_category="Share Page" data-ga_label="Shelf" data-ga_action="Click Sign Up">
          Sign Up
        </a>
      </p>
    <% end %>
  </div>
</div><!-- eo shelf -->
