  <%= vanity_js %>
  <% experiments = vanity_experiments %>
  <% unless experiments.empty? %>
    <script>
      <% experiments.each do |name, alternative| %>
        try {
          _gaq.push(['_trackEvent', 'ab-testing', '<%= name %>', '<%= alternative.value %>']);
        } catch(e) {}
      <% end %>
    </script>
  <% end %>
</body>
</html>
