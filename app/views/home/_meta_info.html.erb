<% if @meta_info[:video_info] or @meta_info[:user_info] %>
	<!-- For FB -->
	<meta property="fb:app_id" 	content="<%= Settings::Facebook.facebook_app_id %>" /> 
	<meta property="og:type" 		content="video.other" />
	<meta property="og:url"			content="<%= @meta_info[:permalink] %>" /> 
	<meta property="og:video:url" content="<%= @meta_info[:permalink] %>" /> 
	<meta property="og:video:secure_url" content="<%= @meta_info[:permalink] %>" /> 
	<meta property="og:locale"      content="EN_us" />
<% end %>

<% if @meta_info[:video_info] %>
	<meta property="og:title" content="<%= @meta_info[:video_info]['video']['title'] %>" /> 
	<meta property="og:image" content="<%= @meta_info[:video_info]['video']['thumbnail_url'] %>" />
	<meta property="og:description" content="<%= @meta_info[:video_info]['video']['title'] %>: <%= @meta_info[:video_info]['video']['description'] %> | Shelby.tv - the best way to watch video on the web and iOS." />
	<meta name="description" content="<%= @meta_info[:video_info]['video']['title'] %>: <%= @meta_info[:video_info]['video']['description'] %> | Shelby.tv - the best way to watch video on the web and iOS.">
<% elsif @meta_info[:user_info] %>
	<% user_roll_title = "#{@meta_info[:user_info]['name']}'s Personal Video Roll on Shelby.tv" %>
	<% user_roll_description = "#{@meta_info[:user_info]['name']}'s Personal Video Roll is the video that they've shared online | Shelby.tv - the best way to watch video on the web and iOS." %>
	<meta property="og:title" content="<%= user_roll_title %>" /> 
	<meta property="og:description" content="<%= user_roll_description %>" />	
	<meta property="og:image" content="<%= @meta_info[:user_info]['user_image_original'] %>" />
	<meta name="description" content="<%= user_roll_description %>" />	
<% else %>
 	<meta name="description" content="<%= Settings::Application.meta_description %>">	 
<% end %>
