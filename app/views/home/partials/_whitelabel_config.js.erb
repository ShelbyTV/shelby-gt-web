if (typeof(shelby) == 'undefined') {
    shelby = {};
}

if (typeof(shelby.config) == 'undefined') {
    shelby.config = {};
}

shelby.config.whitelabel = {
  mode: "<%= @whitelabel_mode.to_s %>",
  MODES : {
    cheez : "cheez",
    none :  ""
  },
  isWhitelabeled : function() {
    return this.mode.length;
  },
  appOwnerTwitterHandle : function() {
    switch (this.mode) {
      case this.MODES.cheez:
        return "cheezburger"
      default:
        return "shelby"
    }
  },
  appOwnerDomain : function() {
    switch (this.mode) {
      case this.MODES.cheez:
        return "Cheezburger.com"
      default:
        return "Shelby.tv"
    }
  }
};