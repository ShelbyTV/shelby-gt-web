<section class="landing-shelf-rolling-share landing-shelf-share landing-shelf">
	<div class="landing-shelf-lining clearfix">

		<%= render :partial => "/home/shelf/video_embed", :locals => {:share_buttons => true } %>
		
		<div class="landing-shelf-share-content">
			<h1><%= @user['name'] if @user %> shared this video</h1>
			
			<p class="share-context clearfix">
				<img src="<%= avatar_url_for_user(@user) %>" class="user-avatar" />
				<span class="user-nickname"><%= @user['nickname'] if @user %></span><br />
				<%= creators_message_from_frame(@frame) %>
			</p>
			
			<hr />
			
			<h2 class="landing-shelf-subheader">
				Shelby.tv is a simple new way to enjoy video.
				We're currently in a private beta, but we'll let you know when the wait is over.
			</h2>

			<%= render :partial => "/home/shelf/interest_email_form" %>
	
		</div>

	</div>
</section>