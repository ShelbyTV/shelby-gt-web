<div class="shelf shelf--community clearfix">
  <div class="shelf__lining">
    <h3 class="shelf__h2">
      Start watching .TV now.
    </h3>

    <ul class="list shelf__list clearfix">
      <%
        frames = [
          {
            'title'       => "NerdFitness",
            'location'    => "nerdfitness.shelby.tv",
            'description' => "Singer/rapper Baby Kaely teams up with @iamwill for a tribute to lives lost in the Newtown Massacre. http://t.co/9ZkSCu8Y",
            'url'         => "http://nerdfitness.shelby.tv",
            'thumbnail'   => "/images/landing/nerdfitness.jpg"
          },
          {
            'title'       => "Reece",
            'location'    => "reece.shelby.tv",
            'description' => "Singer/rapper Baby Kaely teams up with @iamwill for a tribute to lives lost in the Newtown Massacre. http://t.co/9ZkSCu8Y",
            'url'         => "http://reece.shelby.tv",
            'thumbnail'   => "/images/landing/reece.jpg"
          },
          {
            'title'       => "Nature is Rad",
            'location'    => "natureisrad.shelby.tv",
            'description' => "Singer/rapper Baby Kaely teams up with @iamwill for a tribute to lives lost in the Newtown Massacre. http://t.co/9ZkSCu8Y",
            'url'         => "http://shelby.tv/roll/4fdf3d27b415cc69340008f8/Nature-is-rad",
            'thumbnail'   => "/images/landing/nature_2.jpg"
          }
        ]
      %>

      <% frames.each do |frame| %>
        <li class="shelf__item">
          <article class="frame shelf__frame">
            <a href="<%= frame["url"] %>" class="shelf__link" title="watch username's roll">
              <div class="frame-body-wrapper">
                <div class="image_module frame-thumbnail" style="background-image: url('<%= frame["thumbnail"] %>');" role="img">
                  <img class="visuallyhidden" src="<%= frame["thumbnail"] %>" title="<%= frame["thumbnail"] %>" alt="<%= frame["thumbnail"] %> thumbnail">
                </div><!-- eo .frame-thumbnail -->

                <div class="media_module frame-footer clearfix">
                  <div class="media_body">
                    <h3 class="xuser-data">
                      <%= frame["title"] %>
                      <span class="xuser-data-timestamp">
                        <%= frame["location"] %>
                      </span>
                    </h3>

                    <p class="xuser-message">
                      <%= frame["description"] %>
                    </p>
                  </div><!-- eo .media_body -->

                  <div class="frame-subsection">
                  </div>
                </div>
              </div><!-- eo .frame-body-wrapper -->
            </a>
          </article>
        </li>
      <% end %>
    </ul>
  </div><!-- eo shelf__lining -->
</div><!-- eo shelf -->