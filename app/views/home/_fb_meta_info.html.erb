<!-- For FB -->
<meta property="fb:app_id" 	content="<%= Settings::Facebook.facebook_app_id %>" /> 
<meta property="og:type" 		content="video.other" />
<meta property="og:url"			content="http://<%= @permalink %>" /> 
<meta property="og:video:url" content="http://<%= @permalink %>" /> 
<meta property="og:video:secure_url" content="https://<%= @permalink %>" /> 
<meta property="og:title" content="<%= @fb_meta_info['video']['title'] %>" /> 
<meta property="og:image" content="<%= @fb_meta_info['video']['thumbnail_url'] %>" />
<meta property="og:description" content="<%= @fb_meta_info['video']['description'] %>" />
<meta property="og:locale"      content="EN_us" />
<!-- General -->		
<meta name="description" content="<%= @fb_meta_info['video']['title'] %>: <%= @fb_meta_info['video']['description'] %>">
