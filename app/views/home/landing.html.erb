<!doctype html>
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->

<% # if we got any meta tag info from request display it, otherwise just render head normally %>
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# shelbytv: http://ogp.me/ns/fb/shelbytv#" profile="http://www.w3.org/2005/10/profile">
  <meta charset="utf-8">

  <title><%= render :partial => "/home/title_tag" %></title>

  <%= render :partial => "/home/meta_info" %>
  <meta content="user-scalable=no, width=device-width, initial-scale=0.8" name="viewport">
  <link rel="apple-touch-icon-precomposed" href="http://shelby.tv/apple-touch-icon-precomposed.png" />

  <%= stylesheet_link_tag "landing", :media => "screen" %>
  <!--[if lt IE 9]><%= stylesheet_link_tag "png", :media => "screen, projection" %><![endif]-->
  <%= javascript_include_tag "common", "landing" %>

  <script>
    var shelbyTrackingCategory = "Landing Page";
  </script>

  <!-- Facebook Ad Tracking -->
  <script type="text/javascript">
    var fb_param = {};
    fb_param.pixel_id = '6008900763972';
    fb_param.value = '0.00';
    fb_param.currency = 'USD';
    (function(){
      var fpw = document.createElement('script');
      fpw.async = true;
      fpw.src = '//connect.facebook.net/en_US/fp.js';
      var ref = document.getElementsByTagName('script')[0];
      ref.parentNode.insertBefore(fpw, ref);
    })();
  </script>
  <noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/offsite_event.php?id=6008900763972&amp;value=0&amp;currency=USD" /></noscript>
  <!-- END -->

</head>
<body class="shelby<%= ' shelby--mobile' if @mobile_os or @is_mobile %><% if @sign_up %> shelby--signup<% else %> shelby--landing<% end %>">
  <!-- Facebook widget -->
  <div id="fb-root"></div>

  <div class="shelby__wrapper clearfix" role="main">

    <%= render :partial => '/home/landing_header', :locals => {:show_login => true, :user_signed_in => @user_signed_in} %>

    <% #------------ Shelf Content --------------- %>

    <%= render :partial => '/home/shelf/errors' %>
    <%= render :partial => "/home/shelf/team" if @team %>

    <% if !@sign_up and (!@share_type) and !@invite_id and !@team %>
      <%= render :partial => "/home/shelf/iphone" if !(@mobile_os or @is_mobile) %>

      <nav class="slide_navigator">
        <ul class="list js-slide-navigator">
          <li class="list__item list__item--selected">
            <a href="#intro" class="slide_navigator__button js-scrollto">
              <span class="visuallyhidden">Intro</span>
            </a>
          </li>
          <li class="list__item">
            <a href="#stream" class="slide_navigator__button js-scrollto">
              <span class="visuallyhidden">Stream</span>
            </a>
          </li>
          <li class="list__item">
            <a href="#social" class="slide_navigator__button js-scrollto">
              <span class="visuallyhidden">Social</span>
            </a>
          </li>
          <li class="list__item">
            <a href="#press" class="slide_navigator__button js-scrollto">
              <span class="visuallyhidden">Press</span>
            </a>
          </li>
        </ul>
      </nav>


      <%= render :partial => "/home/shelf/call_to_action" %>
      <%= render :partial => "/home/shelf/stream" %>
      <%= render :partial => "/home/shelf/social" %>
      <%= render :partial => "/home/shelf/press" %>

    <% end %>

    <% #------------ /Shelf Content --------------- %>

    <%= render :layout => '/objects/modal_dialog', :locals => { :modifier => 'sms' } do %>
      <%= render :partial => '/home/partials/modal__sms' %>
    <% end %>
  </div><!-- /shelby-wrapper -->

  <%= render :partial => '/home/shelf/footer' %>

  <%= render :partial => '/home/landing_scripts' %>

</body>
</html>
