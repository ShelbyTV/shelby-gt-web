<% 
  var rollTitle = roll.get('title') || '',
      rollCreator = roll.get('creator'),
      rollCreatorNickname = roll.get('creator_nickname') || '',
      rollSubdomain = roll.has('subdomain'),
      personalRollId = shelby.models.user.get('personal_roll_id');

  var titleNameMatch = rollTitle == rollCreatorNickname;    
%>

<div class="current-roll-avatar">
  <% if (rollTitle) { %>
    <img src="<%= roll.get('thumbnail_url') || '/images/assets/user_loggedout.svg' %>"
    alt="<%= rollTitle %>'s Avatar" title="<%= rollTitle %>'s Roll">
  <% } %>
</div>

<div class="title">
  <% if(roll.id == personalRollId && rollSubdomain) { %>
    <h2 class="current-roll<%= (titleNameMatch) ? ' roll-name-single' : ' x' %>">
      <span class="roll-title-text">
        <%= libs.shelbyGT.viewHelpers.roll.titleForDisplay(roll) || '' %>
      </span>
      <span id="js-roll-name-change" class="roll-name-change">
        <input value="<%= rollTitle %>" size="15"/>
      </span>
    </h2>
  <% } else { %>
    <h2 class="current-roll<%= (titleNameMatch) ? ' roll-name-single' : ' x' %>">
      <span class="roll-title-text">
        <%= libs.shelbyGT.viewHelpers.roll.titleForDisplay(roll) || '' %>
      </span>
      <span id="js-roll-name-change" class="roll-name-change">
        <input value="<%= rollTitle %>" size="15"/>
      </span>
    </h2>
    <% if (!titleNameMatch) { %>
      <h3 class="current-roll-owner-nickname">
        <%= rollCreatorNickname %>
      </h3>
    <% } %>
  <% } %>
</div>