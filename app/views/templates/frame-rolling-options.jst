<fieldset class="roll-options">
  <label for="new-roll-name" class="roll-options-label">Roll Name</label>
  <input name="new-roll-name" id="new-roll-name" class="js-new-roll-name-input roll-options-input" placeholder="Roll name..." type="text">
  <% if (!roll.get('public')) { %>
    <label for="new-roll-recipients" class="roll-options-label">Recipients</label>
    <input name="new-roll-recipients" id="new-roll-name" class="js-new-roll-recipients roll-options-input" placeholder="Email Addresses..." type="email" multiple="multiple">
  <% } %>
</fieldset>