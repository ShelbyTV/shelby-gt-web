<% if (!user.isNew()) { %>
  <div class="user_card frame-body-wrapper clearfix">
    <div class="image_module image_glow--bottom user_card__head" style="background-image:url(<%= libs.shelbyGT.viewHelpers.user.avatarUrl(user, libs.shelbyGT.UserAvatarSizes.large) %>);">
      <h1 class="user_card__h1"><%= user.get('name') %> Network</h1>
    </div>

    <div class="user_card__body media_module clearfix">
      <div class="xuser-avatar media_image image_module" style="background-image: url(<%= libs.shelbyGT.viewHelpers.user.avatarUrl(user, libs.shelbyGT.UserAvatarSizes.large) %>);">
        <img class="visuallyhidden" src="<%= libs.shelbyGT.viewHelpers.user.avatarUrl(user, libs.shelbyGT.UserAvatarSizes.large) %>" />
      </div>

      <div class="media_body">
        <p class="xuser-data">
          <a href="http://<%= user.get('personal_roll_subdomain') || user.get('nickname') %>.shelby.tv"><strong><%= user.get('personal_roll_subdomain') || user.get('nickname') %></strong></a>
        </p>

        <p class="xuser-message">
          Dwarf elephants are prehistoric members of the order Proboscidea that, through the process of allopatric speciation on islands, evolved much smaller body sizes in comparison with their immediate ancestors.
        </p>

        <div class="frame-subsection clearfix">
          <ul class="list list--inline">
            <li class="left">
              <a class="list__link" href="#">vincentvondoom.com</a>
            </li>

            <% var tw = _.find(user.get('authentications'),function(a){ return a.provider == 'twitter' }) %>
            <% if (typeof tw !== 'undefined'){ %>
              <li class="l">
                <a class="list__link" href="http://twitter.com/<%= tw.nickname %>" target="_blank">
                  <i class="icon-social_twitter"></i>
                  <span class="visuallyhidden">Twitter</span>
                </a>
              </li>
            <% } %>
            <% var fb = _.find(user.get('authentications'),function(a){ return a.provider == 'facebook' }) %>
            <% if (typeof fb !== 'undefined'){ %>
              <li class="">
               <a class="list__link" href="http://facebook.com/<%= fb.nickname %>" target="_blank">
                  <i class="icon-social_facebook"></i>
                  <span class="visuallyhidden">Facebook</span>
                </a>
              </li>
            <% } %>
            <% var tu = _.find(user.get('authentications'),function(a){ return a.provider == 'tumblr' }) %>
            <% if (typeof tu !== 'undefined'){ %>
              <li class="">
                <a class="list__link" href="http://<%= tu.uid %>.tumblr.com" target="_blank">
                  <i class="icon-social_tumblr"></i>
                  <span class="visuallyhidden">Tumblr</span>
                </a>
              </li>
            <% } %>
          </ul>
        </div><!-- eo frame-subsection -->

      </div><!-- eo media_body -->
    </div><!-- eo user_card__body -->
  </div><!-- eo user_card -->

  <div class="panel panel--left media_module frame-body-wrapper clearfix">
    <div class="media_image media_image--rev">
      <button class="button_primer button_green panel__button">
        Follow
      </button>
    </div>

    <div class="panel__h1 media_body">
      You're watching: SurfParty USA
    </div>
  </div><!-- eo media_module -->

<% } else { %>
  Spinna'
<% } %>