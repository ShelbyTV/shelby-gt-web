<div class="modal__body  modal__body--scroll clearfix">
  <h2 class="modal__h1">
    Follow the best of web video
  </h2>
  <p class="modal__block">
    Follow at least 3 of our hand-picked content sources.<br />
    We'll keep your stream fresh with high quality video.
  </p>
  <ul class="list_module roll_categories">
    <% _(rollCategories).each(function(category){ %>
      <li class="list__item">
        <div class="media_module source_card clearfix">
          <div class="media_image--rev">
            <button class="button_primer button_command button_command--flexible button_gray source_card__button js-onboarding-roll-button" data-roll_id="<%= category.id %>">Follow</button>
          </div><!-- eo media_image--rev -->

          <div class="media_image">
            <img src="<%= category.get('display_thumbnail_src') %>" class="source_card__image avatar" />
          </div><!-- eo media_image -->

          <div class="media_body">
            <h3 class="source_card__h1"><%= category.get('display_title') %></h3>
            <p class="source_card__block"><%= category.get('description') %></p>
          </div>
        </div><!-- eo source card -->
      </li>
    <% }); %>
  </ul>
</div><!-- eo modal__body -->

<div class="modal__foot clearfix">
  <button disabled class="button_primer button_command button_command--flexible button_green disabled js-onboarding-advance-stage">
    <span class="button_label">Follow 3 More</span>
  </button>
</div><!-- eo modal__foot -->
