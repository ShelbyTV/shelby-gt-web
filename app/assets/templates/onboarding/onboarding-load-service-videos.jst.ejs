<div class="modal__body modal__body--bare modal__body--<%= currentService %> clearfix">
  <h1 class="modal__h1 modal__h1--padding">
    Connecting <%= _(currentService).capitalize() %>â€¦
  </h1>

  <ol class="list js-progress-list">
    <li class="list__item load_progress clearfix">
      <h2 class="load_progress__h1">
        <span class="load_progress__status"></span>
        <span class="load_progress__label">
          <span>Connecting <%= _(currentService).capitalize() %></span>
          <span><%= _(currentService).capitalize() %> Connected</span>
        </span>
      </h2>
    </li>
    <li class="list__item load_progress load_progress--loading clearfix">
      <h2 class="load_progress__h1">
        <span class="load_progress__status"></span>
        <span class="animate_module load_progress__total js-num-friends">0</span>
        <span class="load_progress__label">
          <span>Finding Friends</span>
          <span>Friends Found</span>
        </span>
      </h2>
    </li>
    <li class="list__item load_progress load_progress--loading clearfix">
      <h2 class="load_progress__h1">
        <span class="load_progress__status"></span>
        <span class="animate_module load_progress__total js-num-videos">0</span>
        <span class="load_progress__label">
          <span>Finding Videos</span>
          <span>Videos Found</span>
        </span>
      </h2>
    </li>
  </ol>

</div><!-- eo modal__body -->

<div class="modal__foot clearfix">
  <a href="http://api.shelby.tv/auth/<%= otherService %>?redir_query=authed_with%3D<%= otherService %>" class="button_primer button_command button_command--flexible button_<%= otherService %>-blue js-authorize"  data-popup_width="1000" data-popup_height="650">
    <span class="icon icon-<%= otherService %>"></span>
    <span class="button_label">Connect</span>
  </a>

  <b>&nbsp;or&nbsp;</b>

  <button class="button_primer button_command button_command--flexible button_green js-onboarding-advance-stage">
    <span class="icon icon-roll"></span>
    <span class="button_label">Add more video</span>
  </button>
</div><!-- eo modal__foot -->