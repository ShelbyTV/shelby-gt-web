<ul class="js-content-selector list list--inline app_nav clearfix">
  <li class="list__item">
    <button class="app_nav__button js-stream js-track-event" data-ga_category="Header" data-ga_action="Stream" data-ga_label='<%= shelby.models.user.get('nickname') %>'>
      Stream
    </button>
  </li>

  <li class="list__item js-channels-menu">
    <button class="app_nav__button js-channels js-track-event" data-ga_category="Header" data-ga_action="Channels" data-ga_label='<%= shelby.models.user.get('nickname') %>'>
      #Channels
    </button>
  </li>

  <% if (!shelby.models.user.isAnonymous()) { %>
    <li class="list__item js-guide-me js-track-event" data-ga_category="Header" data-ga_action="Me" data-ga_label='<%= shelby.models.user.get('nickname') %>'>
      <button class="app_nav__button js-me">
        Me
      </button>
    </li>
  <% } %>

  <% if (false) {  %>
    <!-- TODO: debt -->
    <li class="dropdown_module--no-hover dropdown_module--invite-user list__item js-guide-invite">
      <!-- Content filled in by InviteFormView -->
    </li>
  <% } %>

  <% if (shelby.models.user.get('admin')) { %>
    <li class="list__item js-admin">
      <button class="app_nav__button">
        Admin
      </button>
    </li>
  <% } %>

  <li class="dropdown_module list__item secondary-item guide-settings js-guide-settings">
    <button class="dropdown_button app_nav__button js-track-event" data-ga_category="Header" data-ga_action="Settings" data-ga_label="<%= shelby.models.user.get('nickname') %>">
      Settings <i class="icon-carrot"></i>
    </button>
    <section class="dropdown_section settings-section">
      <div class="dropdown_lining settings-section-lining clearfix">
        <div class="settings-user clearfix">
          <div class="settings-userhandle">
            <img src="<%= libs.shelbyGT.viewHelpers.user.avatarUrl(user) %>">

            <a href="http://<%= user.get('personal_roll_subdomain') + '.shelby.tv' %>" target="_personalRoll">
              <%= user.get('personal_roll_subdomain') + '.shelby.tv' %>
            </a>
          </div>

          <button class="guide-settings-button settings-preferences js-preferences js-track-event" data-ga_category="Header" data-ga_action="Preferences" data-ga_label="<%= shelby.models.user.get('nickname') %>">
            Edit Preferences
          </button>
        </div><!-- eo settings-user-section -->

        <ul class="settings-list clearfix">
          <li class="settings-item">
            <a class="settings-button" href="http://twitter.com/shelby" target="_blank">
              Twitter
            </a>
          </li>

          <li class="settings-item">
            <a class="settings-button" href="http://facebook.com/shelbytv" target="_blank">
              Facebook
            </a>
          </li>

          <li class="settings-item">
            <a class="settings-button" href="http://shelby.tv/blog" target="_blank">
              Blog
            </a>
          </li>

          <li class="settings-item right">
            <button class="settings-button js-signout js-track-event" data-ga_category="Header" data-ga_action="Logout" data-ga_label="<%= shelby.models.user.get('nickname') %>">
              Sign Out
            </button>
          </li>

          <li class="settings-item right">
            <button class="settings-button js-legal">
              Privacy
            </button>
          </li>
        </ul><!-- eo guide-settings-list -->
      </div>
    </section>
  </li>

  <li class="list__item secondary-item guide-search js-guide-search">
    <!-- Content filled in by GuidePresntationSearchView -->
  </li>
</ul><!-- eo guide-presentation-list -->
