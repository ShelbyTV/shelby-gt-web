<div id="dot-tv-welcome-message" class="notifications-wrapper animate_module">
  <div class="roll-header-image">
    <img src="<%= libs.shelbyGT.viewHelpers.roll.guideHeaderImageURL(roll) %>"/>
  </div>
  <h1>Welcome to <%= shelby.config.hostName || libs.shelbyGT.viewHelpers.roll.urlForRoll(roll) %></h1>
  <div class="welcome-sub-message">
    <!-- <img src="<%= libs.shelbyGT.viewHelpers.user.avatarUrlForRoll(roll) %>"/> -->
    <h3>
      <%= roll.get('creator_nickname') %> curates this collection of video, powered by Shelby.tv
    </h3>

  </div>

  <button class="button_primer button_blue dot-tv-welcome__button--play js-start-playing js-track-event" data-ga_category=".TV Welcome" data-ga_action="Click play button" data-ga_label="anonymous">
    <i class="button_icon_right icon_player_play icon">
      Start Watching
    </i>
  </button>
</div>