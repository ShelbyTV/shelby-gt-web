<form action="/preferences/notifications" class="form_module js-submit-notifications">
  <h1 class="form__legend">
    Notifications

  </h1>

  <p class="form__description">
    Let us tell you how popular you are.
  </p>

  <fieldset class="form_fieldset">
    <input checked="<%= preferences.email_updates %>" type="checkbox" class="form_checkbox form_checkbox--inline js-notification-checkbox" id="notificationNews" name="notificationNews" />

    <label for="notificationNews" class="form_label form_label--inline">
      News and Updates
    </label>
  </fieldset>

  <fieldset class="form_fieldset">
    <input checked="<%= preferences.like_notifications %>" type="checkbox" class="form_checkbox form_checkbox--inline js-notification-checkbox" id="notificationLikes" name="notificationLikes" />

    <label for="notificationLikes" class="form_label form_label--inline">
      Likes
    </label>
  </fieldset>

  <fieldset class="form_fieldset">
    <input checked="<%= preferences.reroll_notifications %>" type="checkbox" class="form_checkbox form_checkbox--inline js-notification-checkbox" id="notificationReRolls" name="notificationReRolls" />

    <label for="notificationReRolls" class="form_label form_label--inline">
      Re-Rolls
    </label>
  </fieldset>

  <fieldset class="form_fieldset">
    <input checked="<%= preferences.roll_activity_notifications %>" type="checkbox" class="form_checkbox form_checkbox--inline js-notification-checkbox" id="notificationRollActivity" name="notificationRollActivity" />

    <label for="notificationRollActivity" class="form_label form_label--inline">
      Roll Activity
    </label>
  </fieldset>

  <fieldset class="form_fieldset">
    <button type="submit" class="button_primer button_command button_command--submit button_green">
      Save
    </button>

    <button type="reset" class="button_primer button_command button_command--submit button_gray">
      Cancel
    </button>
  </fieldset>
</form>