<% var userAvatar = libs.shelbyGT.viewHelpers.user.avatarUrl(user) %>
<% var userNickname = user.get('nickname') || "" %>

<div class="conversation clearfix">
  <ul class="conversation__list js-conversation__list">
    <!-- filled in by â€¦ -->
  </ul>

  <form class="new-comment clearfix">
    <div class="media_module clearfix">
      <a href="#" onclick="return false;" class="media_image">
        <span class="image_module xuser-avatar<%= (!userAvatar) ? ' missing-avatar' : ''%>" style="background-image: url(<%= userAvatar %>);" role="img">
          <img src="<%= userAvatar %>" class="visuallyhidden" title="<%= user.get('nickname') %>" alt="<%= user.get('nickname') %>">
        </span>
      </a>

      <div class="media_body">
        <textarea class="form_textarea js-add-message-input new-comment-input" rows="2" autofocus tabindex="0"></textarea>
        <div class="js-frame-comment-error-message frame-comment-error-message"></div>
        <% if ( !user.isNotLoggedIn() ) { %>
          <button class="form_submit button_primer button_blue new-comment-submit js-new-comment-submit js-track-event" data-ga_category="Conversation" data-ga_action="Click submit comment" data-ga_label="<%= user.get('nickname') %>" tabindex="0">
            Comment
          </button>
        <% } %>
      </div>
    </div><!-- eo .media_module-->
  </form>
</div>