  <!-- form element wrapper is in outside of this JST -->
  <fieldset class="form_fieldset">
		<label class="form_label js-from-label">
      From
    </label>

		<input class="form_input form_input_uneditable js-from-input" disabled value="<%= shelby.models.user.get('primary_email') %>"></input>
	</fieldset>

  <fieldset class="form_fieldset">
    <label class="form_label js-to-label" for="email-recipients">
      To
    </label>

    <textarea id="email-recipients" class="form_input js-share-email-addresses" pattern="(\s*[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]+[,\s;]*)*" name="email-recipients" autofocus tabindex="0" rows="2" placeholder="good_friend@gmail.com, bossman@company.com, etc..." ></textarea>
  </fieldset>

  <fieldset class="form_fieldset">
    <label class="form_label" for="email-message">
      Message
    </label>

    <textarea class="form_textarea js-share-textarea" rows="4" name="email-message" id="email-message" tabindex="0"></textarea>
  </fieldset>

	<fieldset class="form_fieldset">
    <button onclick="return false;" class="button_primer button_command button_command--flexible button_green js-submit-share" type="submit" tabindex="0">
      Send
    </button>
	</fieldset>
