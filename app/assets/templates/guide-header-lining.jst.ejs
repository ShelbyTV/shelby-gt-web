<% var creatorNickname = roll.get('creator_nickname') %>
<% var creatorAvatar = libs.shelbyGT.viewHelpers.user.avatarUrlForRoll(roll) %>

<!--   Spinosa is working in here, making this customizable

<div class="image_module" id="guide-header-roll-header-image">
