<% var isGenius       = frame.has('roll') && frame.get('roll').get('genius') %>
<% var user           = shelby.models.user %>
<% var userNickname   = user.get('nickname') %>
<% var userAvatar     = libs.shelbyGT.viewHelpers.user.avatarUrl(user) %>
<% var frameTitle     = frame.get('video').get('title') || '' %>
<% var frameThumbnail = frame.get('video').get('thumbnail_url') %>
<% var conversation   = frame.get('conversation') %>
<% var message        = conversation ? conversation.get('messages').at(0) : null %>

<div class="guide-overlay__head guide-overlay__head--frame-sharing">
  <h1 class="guide-overlay__title">
    Email to Friends
  </h1>

  <button class="button_primer button_gray button_icon-only js-cancel js-track-event" data-ga_category="Sharing" data-ga_action="Click cancel" data-ga_label="<%= userNickname %>">
    <span class="icon-close"></span>
    <span class="visuallyhidden">Cancel</span>
  </button>
</div><!-- eo guide-overlay__head -->

<div class="guide-overlay__body guide-overlay__body--frame-sharing">
  <form class="form_module share-form clearfix">
    <h1 class="frame-title" title="<%= frameTitle %>">
      <%= frameTitle || '' %>
    </h1>

    <div class="frame-body-wrapper clearfix">
      <%=
        SHELBYJST['thumbnail-module']({
          thumbnail : frameThumbnail,
          title : frameTitle
        })
      %>

    </div><!-- eo frame-body-wrapper -->
    <div class="frame-sharing">
    </div>
  </form>
</div><!-- eo over_body guide-overlay-body conversation-body -->
