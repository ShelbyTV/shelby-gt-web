{
  "name": "Shelby #Channels",
  "description": "Watch online video just like TV. Enjoy an amazing, fullscreen playback experience. Online video as it should be!",
  "version": "0.2.6",
  "manifest_version": 2,
  "app": {
    "urls": [
      "http://shelby.tv/channels/",
      "*://shelby.tv/chrome/channels/"
    ],
    "launch": {
      "web_url": "http://shelby.tv/channels?src=chrome-channels-app"
    }
  },
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": ["notifications", "background"],
  "background": {
    "page" : "https://shelby.tv/chrome/channels/background.html#0"
  }
}
